<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context=".CaptureImageActivity">


    <TextView
        android:id="@+id/textView_captureImageInstructions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="@string/textView_CaptureImage_Instructions"
        android:textSize="@dimen/textSize_CaptureImage_TextView"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView_Captured_Image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:contentDescription="Captured image"
        android:src="@drawable/common_google_signin_btn_icon_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_takePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/button_CaptureImage_Take_Photo_displaytext"
            android:textSize="@dimen/textSize_CaptureImage_Buttons" />

        <Button
            android:id="@+id/button_scanPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/button_CaptureImage_Scan_Photo_displaytext"
            android:textSize="@dimen/textSize_CaptureImage_Buttons" />

    </LinearLayout>


</LinearLayout>